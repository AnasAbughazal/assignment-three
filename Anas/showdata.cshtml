@using WebMatrix.Data;
@{
    var db = Database.Open("student1");
    var selectQueryString = "SELECT * FROM Table_1";
    var selectedData = db.Query(selectQueryString);
    var grid = new WebGrid(source: selectedData);

}
<!DOCTYPE html>
<html>
<head>
    <title>showdata</title>
    <style type="text/css">
        .grid {
            margin: 4px;
            border-collapse: collapse;
            width: 300px;
        }

            .grid th, grid td {
                border: 1px solid #fff;
                padding: 5px;
            }

        .head {
            background-color: #4573c1;
            font-weight: bold;
            color: #FFF;
        }

            .head a:link, a:visited, a:active, a:hover {
                color: #fff;
                text-decoration: none;
                font-size: 15px;
            }

        .alt {
            background-color: #cfd5e9;
            color: #000;
            text-align: center;
            font-weight: bold;
        }

            .alt:nth-of-type(even) {
                background-color: #eef1f7;
                color: #000;
                text-align: center;
                font-weight: bold;
            }
    </style>
</head>
<body>
    @grid.GetHtml(
           tableStyle: "grid",
           headerStyle: "head",
           rowStyle:"alt",
           alternatingRowStyle: "alt",
           columns:grid.Columns(
                       grid.Column("Name"),
                       grid.Column("Mobile"),
                       grid.Column("Adddress")))
</body>
</html>
